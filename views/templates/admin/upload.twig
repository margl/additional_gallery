<div class="additional-gallery-container">
    <h2>{{ 'Additional gallery'|trans({}, 'Modules.Additionalgallery.Admin') }}</h2>
    <div class="additional-gallery-image-container">
    {% if additionalImages is defined %}
            {% for image in additionalImages %}
                {% include '@Modules/additional_gallery/views/templates/admin/partials/single-image.twig' %}
            {% endfor %}
    {% endif %}
    </div>
    <div class="row mt-3">
        <div class="col-sm-11">
            <div class="custom-file">
                <input
                        type="file"
                        class="custom-file-input"
                        id="additional_gallery_files"
                        data-multiple-files-text="%count% {{ 'files'|trans({}, 'Modules.Additionalgallery.Admin') }}"
                        multiple
                        name="additional_gallery_files"
                        data-upload-url="{{ path('additional_gallery_upload', {'idProduct' : idProduct}) }}"
                />
                <label class="custom-file-label" for="additional_gallery_files">{{ 'Choose files...'|trans({}, 'Modules.Additionalgallery.Admin') }}</label>
            </div>
        </div>
        <div class="col-sm-1">
            <button type="button" class="btn btn-primary btn-sm additional-gallery-upload-btn">Upload</button>
        </div>
    </div>
</div>
